extends layout

block content
    div(class="main-subcontainer")
        div(class="line-item")
            h2(class="npc-head") #{npc.name}
            if npc.image
                div(class="npc-img-container")
                    img(class="npc-pic" alt="pic of " + npc.name src='/images/' + npc.image)
            p #{npc.desc}
            p #{npc.category.name}
            p #{npc.loc}
            p #{npc.quote}
            p #{npc.notes}
        
            a(href=npc.category.url) #{npc.category.name}
            a(href=npc.url + "/update") Update NPC
        
        form(method='POST' action='')
            div.form-group
                label(class="confirm-delete") Are you sure you want to delete this NPC?
                input#npcid.form-control(type='hidden',name='npcid', required='true', value=npc._id )
                button(class="confirm-delete-btn" type='submit') Confirm