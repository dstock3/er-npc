extends layout

block content
  section(class="npc-detail")
    div(class="npc-detail-top")
      h2(class="npc-head") #{npc.name} 
      div(class="npc-page-quote") "#{npc.quote}"
      div(class="npc-detail-container")
        div(class="npc-detail-subcontainer")
          div(class="npc-page-desc") #{npc.desc}
          a(href=npc.category.url class="npc-page-cat") #{npc.category.name}
          div(class="npc-page-loc") Location: #{npc.loc}
          if npc.notes
            h3(class="npc-page-notes-head") Notes: 
            div(class="npc-page-notes") #{npc.notes}
        if npc.image
          div(class="npc-img-container")
            img(class="npc-pic" alt="pic of " + npc.name src='/images/' + npc.image)
    div(class="npc-detail-bottom")
      div(class="npc-control-container control-delete-page")
        a(href="/npc/" + npc._id + "/update" class="update-npc") Update NPC

    form(method='POST' action='' class="npc-delete")
        div.form-group
            label(class="confirm-delete") Are you sure you want to delete this NPC?
            input#npcid.form-control(type='hidden',name='npcid', required='true', value=npc._id )
            button(class="confirm-delete-btn" type='submit') Confirm